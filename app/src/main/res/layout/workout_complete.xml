<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_splash"
    tools:context="com.example.swayactive.activities.WorkoutCompleteActivity">

    <!-- Confetti Background Elements -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:src="@drawable/effect_vector"
        android:layout_marginTop="100dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="45dp"
        android:src="@drawable/effect_vector"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="50dp"
        android:src="@drawable/effect_vector"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="40dp"
        android:src="@drawable/effect_vector"
        android:layout_marginTop="200dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="35dp"
        android:src="@drawable/effect_vector"
        android:layout_marginBottom="150dp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="65dp"
        android:src="@drawable/effect_vector"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="42dp"
        android:src="@drawable/effect_vector"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="48dp"
        android:src="@drawable/effect_vector"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/completionCard"
        android:layout_width="280dp"
        android:layout_height="360dp"
        android:layout_marginHorizontal="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Character Illustration -->
            <ImageView
                android:id="@+id/completionCharacter"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/workout_character_celebration"
                android:layout_marginBottom="24dp" />

            <!-- Completion Message -->
            <TextView
                android:id="@+id/completionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training completed"
                android:textColor="@color/background_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/completionSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="successfully"
                android:textColor="@color/background_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Continue Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/continueButtonCard"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/completionCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>