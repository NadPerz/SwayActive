<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_splash2"
    tools:context=".activities.OnboardingWeightActivity">


    <!-- Status bar spacing -->
    <ImageView
        android:id="@+id/ellipseTop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/ellipse_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ellipseTop2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/ellipse_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ellipseTop7"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/ellipse_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ellipseTop3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="16dp"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/ellipse_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ellipseTop4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="508dp"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/ellipse_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ellipseTop5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="508dp"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/ellipse_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ellipseTop6"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="508dp"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/ellipse_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:id="@+id/statusBarSpacer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Progress indicator -->
    <LinearLayout
        android:id="@+id/progressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/progress_active"
            android:backgroundTint="#2D2D3A" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/progress_inactive"
            android:backgroundTint="#D1D1D1" />

        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@drawable/progress_inactive"
            android:backgroundTint="#D1D1D1" />
    </LinearLayout>

    <!-- Main content container -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/tvWeightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your weight?"
            android:textColor="#2D2D3A"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Weight unit selector -->
        <androidx.cardview.widget.CardView
            android:id="@+id/unitSelectorCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F5F5F7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/unit_selector_bg">

                <Button
                    android:id="@+id/btnKg"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="kg"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:background="@drawable/selected_unit_bg"
                    android:backgroundTint="#262135"
                    style="?android:attr/borderlessButtonStyle" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Weight selector container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/weightSelectorCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#BAC7F6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <!-- Current weight display -->
                <TextView
                    android:id="@+id/tvWeightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="84"
                    android:textColor="#2D2D3A"
                    android:textSize="96sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="8dp" />

                <!-- Unit label -->
                <TextView
                    android:id="@+id/tvWeightUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:layout_marginBottom="24dp" />

                <!-- Weight scale ruler -->
                <RelativeLayout
                    android:id="@+id/weightRulerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <!-- Scale background -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_centerVertical="true"
                        android:background="#000000" />

                    <!-- Scale markers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- 50 kg marker -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="12dp"
                                android:background="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textSize="12sp"
                                android:textColor="#000000"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- 60 kg marker -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="8dp"
                                android:background="#000000" />
                        </LinearLayout>

                        <!-- 70 kg marker -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="8dp"
                                android:background="#000000" />
                        </LinearLayout>

                        <!-- 80 kg marker -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="12dp"
                                android:background="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80"
                                android:textSize="12sp"
                                android:textColor="#000000"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Current position indicator (84kg) -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:id="@+id/currentPositionIndicator"
                                android:layout_width="3dp"
                                android:layout_height="20dp"
                                android:background="#2D2D3A"
                                android:layout_marginBottom="2dp" />
                        </LinearLayout>

                        <!-- 90 kg marker -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="8dp"
                                android:background="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:textSize="12sp"
                                android:textColor="#000000"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- 100 kg marker -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="8dp"
                                android:background="#000000" />
                        </LinearLayout>

                        <!-- 120 kg marker -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="12dp"
                                android:background="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120"
                                android:textSize="12sp"
                                android:textColor="#000000"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Navigation buttons -->
    <LinearLayout
        android:id="@+id/navigationButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnBackCard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F5F5F7">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back button"
                android:padding="18dp"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </androidx.cardview.widget.CardView>

        <!-- Next button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnNextCard"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2D2D3A">

            <LinearLayout
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="24dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_next_arrow_container"
                    android:contentDescription="Next button arrow" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Decorative background elements (optional) -->
    <View
        android:id="@+id/decorativeElement1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/decorative_circle"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/decorativeElement2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/decorative_circle"
        android:alpha="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>