<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_splash"
    android:fillViewport="true"
    tools:context="com.example.swayactive.activities.MainDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/circular_background_white"
                app:civ_border_color="@color/pink_accent"
                app:civ_border_width="2dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_search"
                android:background="@drawable/circular_background"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Menu/Options Icon -->
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu"
                android:background="@drawable/circular_background"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,\nnadija"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="normal"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <!-- Calorie Card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp">

            <!-- Background Wave Chart -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/calorieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Calorie Count Overlay -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/calorieCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="600cal"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/yellow_pill_background"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>

            <!-- Week Days -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Mon"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tues"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Wed"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Thurs"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Sat"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Sun"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Schedule Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Your\nSchedule"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp" />

            <ImageView
                android:id="@+id/scheduleMenuIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu_horizontal"
                android:background="@drawable/circular_background_white"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Today's Activity Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Activity"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Activity Items -->
        <!-- WarmUp Activity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:paddingVertical="8dp">

            <!-- Activity Dot -->
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/yellow_circle"
                android:layout_marginEnd="16dp" />

            <!-- Activity Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WarmUp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Run 02 km"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Start Button -->
            <TextView
                android:id="@+id/startWarmupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/yellow_pill_background"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp" />

        </LinearLayout>

        <!-- Muscle Up Activity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp"
            android:paddingVertical="8dp">

            <!-- Activity Dot -->
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/gray_circle"
                android:layout_marginEnd="16dp" />

            <!-- Activity Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muscle Up"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 reps, 3 sets with 30 sec rest"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bottom_nav_background"
            android:paddingHorizontal="24dp">

            <!-- Left Side - Grid Icon -->
            <ImageView
                android:id="@+id/gridNavIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_grid"
                android:background="@drawable/circular_background_white"
                android:padding="12dp" />

            <!-- Center Navigation Track -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/nav_track_background"
                android:layout_marginHorizontal="20dp">

                <!-- Navigation Icons -->
                <ImageView
                    android:id="@+id/navIcon1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_calendar"
                    android:background="@drawable/nav_dot_inactive"
                    android:padding="4dp"
                    android:layout_marginHorizontal="8dp" />

                <ImageView
                    android:id="@+id/navIcon2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_chart"
                    android:background="@drawable/nav_dot_active"
                    android:padding="6dp"
                    android:layout_marginHorizontal="8dp" />

                <ImageView
                    android:id="@+id/navIcon3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_settings"
                    android:background="@drawable/nav_dot_inactive"
                    android:padding="4dp"
                    android:layout_marginHorizontal="8dp" />

                <ImageView
                    android:id="@+id/navIcon4"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/nav_dot_inactive"
                    android:padding="4dp"
                    android:layout_marginHorizontal="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>